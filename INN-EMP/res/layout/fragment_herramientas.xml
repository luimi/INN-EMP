<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/Naranja" >

        <ImageView
            android:id="@+id/LogoHerramientas"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/herramientas" />

        <TextView
            android:id="@+id/TituloHerramientas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Herramientas"
            android:textColor="@color/Blanco"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/PrototipajeHerramientas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/NaranjaRojizo"
            android:onClick="prototipaje"
            android:text="Prototipaje"
            android:textColor="@color/Blanco"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ResumenHerramientas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/Gris"
            android:onClick="resumen"
            android:text="Resumen Ejecutivo"
            android:textColor="@color/Blanco"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ElevadorHerramientas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/Gris"
            android:onClick="elevador"
            android:text="Elevador Pitch"
            android:textColor="@color/Blanco"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/HerramientasImg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/herramientas1" />

            <ImageView
                android:id="@+id/HerramientasImg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/herramientas2" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>